<%= form_for @meal do |f| %>
<p>
  <%= f.label :meal_date %>
  <%= f.date_field :meal_date, :class => "form-control", :required => true %>
</p>

<p>
  <%= f.label :meal_time %>
  <%= f.time_field :meal_time, :class => "form-control", :required => true %>
</p>
  <%= f.submit :class => "btn btn-success" %>
<% end %>
