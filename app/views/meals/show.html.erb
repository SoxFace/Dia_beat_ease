<h3><%= @meal.meal_time.strftime('%R') %>, <%= @meal.meal_date.strftime('%e %B %Y') %></h3>

<p>
  <h4>You've added these foods to your meal:</h4>
</p>


<!-- This throws up a list when the page loads. List is then manipulated by JS -->
<ul id="added-foods">
  <% @meal.foods.each do |food| %>

    <li data-food-id="<%= food.id %>" data-meal-id="<%= food.meal_id %>" data-carbs="<%= food.carbs %>" data-quantity="<%= food.quantity %>">
      <span class="badge food-badge">Qty: <%= food.quantity.to_i %></span><span class="badge food-badge">Carbs: <%= (food.carbs * food.quantity).round %></span><%= food.foodname %><span class="glyphicon glyphicon-trash delete"></span>
    </li>

  <% end %>
</ul>


<!-- Updated in foods.js as foods are added/deleted from list -->
<span class="badge" id="total-carbs">Total Carbs:
  <% sum = 0 %>
  <% @meal.foods.each_with_index do |v, i| %>
    <% sum += (@meal.foods[i].carbs * @meal.foods[i].quantity) %>
  <% end %>
  <%= sum.round %>
</span>
