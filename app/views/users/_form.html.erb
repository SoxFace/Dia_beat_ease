<%= form_for @user do |f| %>
  <%= f.label :username, :title => 'Enter your desired username.' %>
  <%= f.text_field :username, :autofocus => true, :required => true, :title => 'Enter your desired username.' %>

  <%= f.label :email, :title => 'Please enter the email address where we can contact you for important alerts and notifications.' %>
  <%= f.text_field :email, :required => true, :title => 'Please enter the email address where we can contact you for important alerts and notifications.'  %>

  <%= f.label :password, :title => 'Enter a password for your account.' %>
  <%= f.password_field :password, :title => 'Enter a password for your account.' %>

  <%= f.label :password_confirmation, :title => 'Re-enter your password.' %>
  <%= f.password_field :password_confirmation, :title => 'Re-enter your password.' %>

  <%= button_tag %>
<% end %>